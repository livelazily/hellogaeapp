{% extends "base.jinja2" %}

{% block title %}Tasks{% endblock %}
{% block head %}
	{{ super() }}
	<style>
		body {
			padding-top: 60px;
		}

		#container {
			width: 460px;
			min-height: 300px;
		}

		.task-index {
			width: 10%;
		}

		.task-name {
			width: 90%;
		}

		.footer {
			text-align: right;
		}
	</style>
{% endblock head %}
{% block content %}
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
				<a class="brand" href="/tasks">Tasks</a>
			</div>
		</div>
	</div>
	<!-- /navbar -->

	<div id="container" class="container">
		<h2>Check update projects</h2>
		<table id="taskTable" class="table table-bordered">
			<thead>
			<tr>
				<th>#</th>
				<th>Project Name</th>
			</tr>
			</thead>
			<tbody>
			{% for task in tasks %}
				<tr>
					<td class="task-index">{{ loop.index }}</td>
					<td class="task-name"><a
							href="{{ request.scheme }}://code.google.com/p/{{ task.name }}/downloads/list"
							target="_blank">{{ task.name }}</a></td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>
	<!-- /container -->
{% endblock content %}
